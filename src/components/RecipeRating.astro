  <p>ğŸ‘¥ <strong>Rating Count:</strong> {ratingData?.ratingCount ?? 0}</p>
  <p>ğŸ‘€ <strong>Views:</strong> {viewsData?.count ?? 0}</p>

  {
    user && (
      <RateRecipe
        client:only="react"
        recipeSlug={slug}
        userId={user.id}
        initialRating={Number(ratingData?.rating ?? 0)}
      />
    )
  }
</section>
