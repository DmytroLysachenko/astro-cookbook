---
import { headerLinks, SITE_TITLE } from "../constants";
import Navigation from "./Navigation.astro";
import Auth from "./react/Auth";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);
---

<header class="bg-background text-foreground shadow-sm">
  <nav class="container flex justify-between items-center py-4">
    <a
      href="/"
      class="heading-responsive text-2xl font-bold"
      >{SITE_TITLE}</a
    >
    <Navigation links={headerLinks} />
    <div class="flex gap-6 justify-center items-center min-w-[140px] min-h-10">
      <Auth
        user={session?.user}
        client:only="react"
      />
    </div>
  </nav>
</header>
