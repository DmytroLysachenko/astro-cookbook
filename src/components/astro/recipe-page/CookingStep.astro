---
import { Image } from "astro:assets";
import { STEPS_IMAGES } from "@/constants";

type TPresetCookingAction = keyof typeof STEPS_IMAGES;

interface CookingStepProps {
  action?: TPresetCookingAction;
  href?: string;
  className?: string;
  alt?: string;
}

const {
  action = "default",
  href,
  className,
  alt,
} = Astro.props as CookingStepProps;

const imagePath = href ? href : `/assets/images/${STEPS_IMAGES[action]}`;
---

<div class={`${className || ""}`}>
  <Image
    src={imagePath}
    alt={alt ? alt : `${action} step`}
    width={1000}
    height={1000}
    class="w-full lg:w-[65%] h-auto"
  />
</div>
