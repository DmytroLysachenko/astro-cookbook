---
// Header skeleton component
---

<header class="bg-background text-foreground shadow-sm">
  <div class="container mx-auto px-4 h-16">
    <div class="flex items-center justify-between h-full">
      <!-- Logo skeleton -->
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gray-200 rounded animate-pulse"></div>
        <div class="w-24 h-6 bg-gray-200 rounded animate-pulse"></div>
      </div>

      <!-- Navigation skeleton -->
      <nav class="hidden md:flex items-center space-x-8">
        <div class="w-16 h-4 bg-gray-200 rounded animate-pulse"></div>
        <div class="w-12 h-4 bg-gray-200 rounded animate-pulse"></div>
        <div class="w-20 h-4 bg-gray-200 rounded animate-pulse"></div>
        <div class="w-16 h-4 bg-gray-200 rounded animate-pulse"></div>
      </nav>

      <!-- Social icons skeleton -->
      <div class="flex items-center space-x-4">
        <div class="w-6 h-6 bg-gray-200 rounded-full animate-pulse"></div>
        <div class="w-6 h-6 bg-gray-200 rounded-full animate-pulse"></div>
        <div class="w-6 h-6 bg-gray-200 rounded-full animate-pulse"></div>
      </div>
    </div>
  </div>
</header>
