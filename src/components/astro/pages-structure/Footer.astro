---
import { Image } from "astro:assets";

import { CATEGORIES_LINKS, QUICK_LINKS, SOCIAL_LINKS } from "@/constants";

const today = new Date();
---

<footer
  class="border-t border-border bg-gradient-to-b from-slate-50 via-white to-slate-50 text-slate-600"
>
  <div class="container mx-auto px-4 py-12 space-y-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      <div class="space-y-3">
        <h3 class="text-xs uppercase tracking-[0.08em] text-slate-500">
          Quick Links
        </h3>
        <ul class="space-y-2">
          {
            QUICK_LINKS.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="group inline-flex items-center gap-3 text-sm font-medium text-slate-800 transition-colors hover:text-primary"
                >
                  {link.emoji && (
                    <span class="flex size-9 items-center justify-center rounded-full bg-slate-100 text-base transition-colors group-hover:bg-primary/10 group-hover:text-primary">
                      {link.emoji}
                    </span>
                  )}
                  <span class="transition-transform group-hover:translate-x-0.5">
                    {link.text}
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-3">
        <h3 class="text-xs uppercase tracking-[0.08em] text-slate-500">
          Recipe Categories
        </h3>
        <ul class="space-y-2">
          {
            CATEGORIES_LINKS.map((category) => (
              <li>
                <a
                  href={category.href}
                  class="group inline-flex items-center gap-3 text-sm font-medium text-slate-800 transition-colors hover:text-primary"
                >
                  {category.emoji && (
                    <span class="flex size-9 items-center justify-center rounded-full bg-slate-100 text-base transition-colors group-hover:bg-primary/10 group-hover:text-primary">
                      {category.emoji}
                    </span>
                  )}
                  <span class="transition-transform group-hover:translate-x-0.5">
                    {category.text}
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-3">
        <h3 class="text-xs uppercase tracking-[0.08em] text-slate-500">
          Connect With Us
        </h3>
        <ul class="space-y-2">
          {
            SOCIAL_LINKS.map((platform) => (
              <li>
                <a
                  href={platform.href}
                  class="group inline-flex items-center gap-3 text-sm font-medium text-slate-800 transition-colors hover:text-primary"
                >
                  <span class="flex size-9 items-center justify-center rounded-full bg-slate-100 transition-colors group-hover:bg-primary/10">
                    <Image
                      class="size-5"
                      width={24}
                      height={24}
                      src={platform.icon}
                      alt={`${platform.text} icon`}
                    />
                  </span>
                  <span class="transition-transform group-hover:translate-x-0.5">
                    {platform.text}
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="flex flex-col gap-4 border-t border-border/70 pt-6 md:flex-row md:items-center md:justify-between">
      <p class="text-sm text-slate-600">
        &copy; {today.getFullYear()} Cooking Spot. All rights reserved.
      </p>
      <nav>
        <ul class="flex flex-wrap items-center gap-4 text-sm text-slate-600">
          <li>
            <a
              href="/privacy-policy"
              class="hover:text-primary transition-colors"
              >Privacy Policy</a
            >
          </li>
          <li>
            <a
              href="/terms-of-service"
              class="hover:text-primary transition-colors"
              >Terms of Service</a
            >
          </li>
          <li>
            <a
              href="/sitemap-index.xml"
              class="hover:text-primary transition-colors"
              >Sitemap</a
            >
          </li>
        </ul>
      </nav>
    </div>
  </div>
</footer>
