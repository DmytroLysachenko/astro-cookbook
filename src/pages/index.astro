---
import SubscribeForm from "@/components/react/SubscribeForm";
import BaseLayout from "../layouts/BaseLayout.astro";
import CustomButton from "@/components/react/CustomButton";

const handleClick = () => console.log("clicked");
---

<BaseLayout>
  <section class="container section-lg text-center py-12 md:py-24">
    <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
      Discover Delicious <span class="text-primary">Recipes</span>
    </h1>
    <p class="mt-6 text-xl text-muted-foreground max-w-prose mx-auto">
      Explore a world of culinary delights with our curated collection of
      recipes. From quick weeknight dinners to gourmet feasts, we've got you
      covered.
    </p>
    <div class="mt-10 flex items-center justify-center gap-x-6">
      <CustomButton
        title="Get Started"
        handleClick={handleClick}
        client:visible
      />
      <a
        href="#featured-recipes"
        class="text-sm font-semibold leading-6 text-muted-foreground"
      >
        Learn more <span aria-hidden="true">â†’</span>
      </a>
    </div>
  </section>

  <section
    id="featured-recipes"
    class="container section"
  >
    <h2 class="text-3xl font-bold text-center mb-8">Featured Recipes</h2>
    <div class="grid-responsive">
      {/* Add featured recipe cards here */}
      <div class="bg-card rounded-lg shadow-md p-6">
        <h3 class="text-xl font-semibold mb-2">Delicious Pasta</h3>
        <p class="text-muted-foreground">
          A quick and easy pasta dish perfect for weeknight dinners.
        </p>
      </div>
      {/* Add more recipe cards as needed */}
    </div>
  </section>

  <section class="py-12 bg-muted rounded-lg">
    <div class="container-sm text-center">
      <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
      <p class="text-muted-foreground mb-6">
        Subscribe to our newsletter for the latest recipes and cooking tips.
      </p>
      <SubscribeForm client:visible />
    </div>
  </section>
</BaseLayout>
